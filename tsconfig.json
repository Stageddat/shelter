{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"moduleResolution": "Bundler",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": false,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"./**/*.ts",
		"./config/**/*.ts",
		"./config/**/*.json"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}